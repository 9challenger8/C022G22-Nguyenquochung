query packageList($filter:PackageFilter)
{
  	 packageList(filter:$filter)
  	{
    	count
        totalPage
        data
        {
            ... on Package
            {
                id
                code
                name
                emailAddressList
                type
                corporateCode
                isPromoted
                isFeatured
                categoryTag
                imgId
                summary
                packageDetails
                hotelId
                status
                hotelCxlPolicyCode
                roomTypeId
                maxAdults
                maxChild
                roomType
                {
                    id
                    name
                    code
                    hotelId
                    sequence
                }
                taxRate
                isTaxRateApplicable
                serviceFee
                isServiceFeeApplicable
                depositValue
                isOverrideHotelFee
                minAdvanceBooking
                termAndCondition
                isOverrideHotelCxlPolicy
                packageTranslationList {
                    id
                    packageId
                    languageCode
                    name
                    packageDetails
                    termAndCondition
                }
                cancellationPriorHour
                displayUnit
                isRefundable
                availability
                checkinDetail
                seoString
                keywords
                confirmationType
            }
        }
    }
}
